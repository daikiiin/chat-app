     <div class="message">
       <div class="user-box">
          <div class="user-main-name">
            <%= message.user.name %>
          </div>
          <div class="dates">
             <%= l message.created_at %>
          </div>
       </div>
       <div class="messages">
         <div class="message-text">
            <%= message.content %>
         </div>
         <%= image_tag message.image.variant(resize: "500x500"), class: 'message-image' if message.image.attached? %>
       </div>
     </div>
